---
import Container from "@components/container.astro";
import Hero from "@components/hero.astro";
import Layout from "@layouts/Layout.astro";
import TablaContenidos from "../components/TablaContenidos.astro";


---

<Layout title="Web Nexus Home">
    <Hero />
    <Container>
        <div class="content-container">
            <div class="main-content">
                <h1 class="text-4xl font-bold mb-6">¿Qué tipo de solución necesitas?</h1>
    
                <!-- Header -->
                <header class=" p-4 mb-6">
                    <h2 class="text-2xl font-semibold">Servicios que ofrecemos</h2>
                </header>
    
                <!-- Contenedores en un grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Página Web para Restaurantes -->
                    <div class="bg-gray-100 p-4 border border-gray-200 relative">
                        <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?auto=format&fit=crop&q=80&w=2070&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Imagen de Restaurante" class="w-full mb-4">
                        <i class="fas fa-utensils absolute top-4 left-4"></i>
                        <h3 class="font-semibold">Página Web para promocion de negocios</h3>
                        <p>Sistema de menú interactivo, reservas , galería de fotos , fácil contacto.</p>
                    </div>
                    <!-- E-commerce Básico -->
                    <div class="bg-gray-100 p-4 border border-gray-200 relative">
                        <img src="https://images.unsplash.com/photo-1542744095-291d1f67b221?auto=format&fit=crop&q=80&w=2070&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Imagen de E-commerce" class="w-full mb-4">
                        <i class="fas fa-shopping-cart absolute top-4 left-4"></i>
                        <h3 class="font-semibold">E-commerce Básico</h3>
                        <p>Para pequeñas tiendas que desean tener presencia en línea.</p>
                    </div>
                    <!-- Blog Personalizado -->
                    <div class="bg-gray-100 p-4 border border-gray-200 relative">
                        <img src="https://images.unsplash.com/photo-1499750310107-5fef28a66643?auto=format&fit=crop&q=80&w=2070&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Imagen de Blog" class="w-full mb-4">
                        <i class="fas fa-blog absolute top-4 left-4"></i>
                        <h3 class="font-semibold">Blog Personalizado</h3>
                        <p>Soluciones para individuos o empresas que quieran un blog.</p>
                    </div>
                    <!-- Páginas de Aterrizaje -->
                    <div class="bg-gray-100 p-4 border border-gray-200 relative">
                        <img src="https://images.unsplash.com/photo-1517134191118-9d595e4c8c2b?auto=format&fit=crop&q=80&w=2070&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Imagen de Landing Page" class="w-full mb-4">
                        <i class="fas fa-rocket absolute top-4 left-4"></i>
                        <h3 class="font-semibold">Desarrollo especializado</h3>
                        <p>Páginas enfocadas en conversión de visitas a ventas o suscripciones.</p>
                    </div>
                </div>
    
                <!-- ... Resto del código ... -->
    
            </div>
            <div class="sticky-container">  {/* Contenedor para TablaContenidos */}
                <TablaContenidos />
            </div>
        </div>
    </Container>
</Layout>




<style>
    /* Añade estos estilos en tu archivo CSS o dentro de una etiqueta <style> en tu componente */
    /* Añade estos estilos en tu archivo CSS o dentro de una etiqueta <style> en tu componente */
    .content-container {
        display: grid;
        grid-template-columns: 85% 15%;
        gap: 1rem;
    }

    .main-content {
        /* No se necesitan estilos especiales aquí */
    }

    .sticky-container {

    }

    /* Añade estos estilos en tu archivo CSS o dentro de una etiqueta <style> en tu componente */
    .tabla-contenido-container {
        position: sticky;
        top: 0;
        height: 100vh;  /* Asegura que el contenedor tenga una altura definida */
        overflow-y: auto;  /* Habilita el desplazamiento si el contenido es más largo que la ventana */
        padding-top: 20px;  /* Añade padding en la parte superior */
        padding-left: 20px;  /* Añade padding a la izquierda */
    }


    .tabla-contenido {
        /* No se necesitan estilos especiales aquí */
    }


</style>

